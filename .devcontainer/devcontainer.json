{
  "name": "HEASoft Analysis Environment",
  // "image": "heasoft:v6.36",
  "runArgs": [
    "--rm"
  ],
  "build": {
    "dockerfile": "Dockerfile"
  },
  "containerEnv": {
    "CALDB": "/home/heasoft/CALDB",
    "GEOMAG_PATH": "/home/heasoft/CALDB/data/gen/pcf/geomag"
  },
  "mounts": [
    // 1. CALDBのマウント
    "source=/home/isseikurihara/HEASoft/CALDB,target=/home/heasoft/CALDB,type=bind",
    
    // 2. 重たい観測データのマウント (Git管理外の安全地帯)
    // ここがコンテナ内の /home/heasoft/data になります
    "source=/home/isseikurihara/HEASoft/data_container/GRB221009A,target=/home/heasoft/data,type=bind"
  ],
  "customizations": {
    "vscode": {
      "settings":{
        },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "mhutchie.git-graph",
        "oderwat.indent-rainbow",
        "janisdd.vscode-edit-csv",
        "mechatroner.rainbow-csv",
        "ms-python.black-formatter",
        "charliermarsh.ruff",
        "streetsidesoftware.code-spell-checker",
        "oderwat.indent-rainbow",
        "sirtori.indenticator",
        "wayou.vscode-todo-highlight",
        "mosapride.zenkaku",
        "alefragnani.project-manager",
        "pkief.material-icon-theme",
        "tonybaloney.vscode-pets"
      ]
    }
  },
  // 起動時の初期設定
  "postCreateCommand": "echo 'export CALDB=/home/heasoft/CALDB' >> ~/.bashrc && echo 'export GEOMAG_PATH=/home/heasoft/CALDB/data/gen/pcf/geomag' >> ~/.bashrc && . .venv/bin/activate"
}